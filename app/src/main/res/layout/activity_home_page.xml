

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#454747"
        tools:context="com.example.madeeha.smarttampon.HomePage"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:id="@+id/timer_font"
        android:textColor="@color/periodRed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/approx_time"
        android:id="@+id/timer_font"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="122dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/calendarbutton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:onClick="gotoCalendarPage"
        android:background="@drawable/calendarbuttonhome" />

    <Button
        android:id="@+id/statsbutton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/statsbuttonhome" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/newtamponbutton"
        android:background="@drawable/newtamponbuttonhome"
        android:gravity="top|left" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/connectbutton"
        android:background="@drawable/connectbuttonhome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:baselineAligned="true"
>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:id="@+id/textView8" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dataLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:id="@+id/button"
            android:layout_gravity="right"
            android:background="@drawable/notificationbutton"
            android:layout_above="@+id/scrollView"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
